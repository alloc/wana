{
  "include": ["src", "spec"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "plugins": [{ "name": "typescript-snapshots-plugin" }],
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext"
  }
}
